{
  "name": "mfml",
  "version": "2.0.0",
  "description": "The ICU MessageFormat + XML/HTML compiler and runtime that makes your translations tree-shakeable.",
  "type": "module",
  "main": "./index.js",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./compiler": "./compiler/index.js",
    "./parser": "./parser/index.js",
    "./ast": "./ast.js",
    "./react": "./react/index.js",
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsc --project tsconfig.build.json && cp package.json README.md LICENSE.txt lib/ && cd lib && npm pkg delete scripts devDependencies",
    "clean": "rimraf lib docs coverage",
    "test": "vitest run",
    "test:definitions": "tsd --typings lib/index.d.ts --files src/main/global.d.ts --files 'src/test/**/*.test-d.ts'",
    "perf": "toofast",
    "docs": "typedoc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smikhalevski/mfml.git"
  },
  "keywords": [
    "i18n",
    "l10n",
    "html",
    "language",
    "parser",
    "translation",
    "compiler",
    "xml",
    "icu",
    "intl",
    "tms",
    "message-format"
  ],
  "author": "Savva Mikhalevski <smikhalevski@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/smikhalevski/mfml/issues"
  },
  "homepage": "https://megastack.dev/mfml",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tsd": "^0.33.0",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.12",
    "typedoc-plugin-mdn-links": "^5.0.9",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "dependencies": {
    "parallel-universe": "^6.1.2"
  }
}
